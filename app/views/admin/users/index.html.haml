%h1 Users

= link_to("Create New User", new_admin_user_path)
|
= link_to("My Storybooks", '/storybooks')

= paginate(@users)
%table#users.well
  %tr
    %th
      ID
    %th
      Email
    %th
      Is Admin?
    %th
      Actions
  - for user in @users
    %tr
      %td
        = user.id
      %td
        = user.email
      %td
        = yes_or_no(user.is_admin?)
      %td
        %a{ :href => "#{edit_admin_user_path(user)}" }
          Edit

%h1 Users

= link_to("Create New User", new_admin_user_path)
|
= link_to("My Storybooks", '/storybooks')

= paginate(@users)
%table#users.well
  %tr
    %th
      ID
    %th
      Email
    %th
      Is Admin?
    %th
      Actions
  - for user in @users
    %tr
      %td
        = user.id
      %td
        = user.email
      %td
        = yes_or_no(user.is_admin?)
      %td
        .btn-group
          %a.btn.dropdown-toggle{'data-toggle' => "dropdown", :href => "#"}
            Actions
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to("Edit", edit_admin_user_path(user))
            %li
              = link_to("Resend Invite", send_invitation_admin_user_path(:id => user.id), :method => :post, :remote => true, :confirm => "This will change password of this user.")
            %li
              = link_to("Assign a Storybook", edit_admin_storybook_assignment_path(:id => user.id))

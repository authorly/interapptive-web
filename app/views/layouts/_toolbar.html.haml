%ul#toolbar
  %li.toolbar-group
    %ul.first-toolbar-group
      %li.scene.disabled
        %a.add-scene{:href => '#'} Scene
      %li.keyframe.disabled
        %a.add-keyframe{:href => '#'} Keyframe
  %li.toolbar-group
    %ul
      %li.edit-text.disabled
        = link_to "Edit Text", "#"
      %li.touch-zones.disabled
        = link_to "Touch Zones", media_path(:from => "scene_touch_zones"), {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}
      %li.add-image.disabled
        = link_to "Add Image", media_path(:from => "scene_images"), {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}
  %li.toolbar-group
    %ul
      %li.actions.disabled
        = link_to "Actions", media_path(:from => "actions"), {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}
      %li.videos.disabled
        = link_to "Videos", media_path(:from => "videos"), {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}

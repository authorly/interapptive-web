        = link_to "Sounds", media_path(:from => "sounds"), {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}
      %li.fonts.disabled
        = link_to "Fonts", media_path(:from => "fonts"), {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}
  %li.toolbar-group.last
    %ul
      %li.options.disabled
        = link_to "Options", "#"
      %li.preview.disabled
        = link_to "Preview", media_path(:from => "preview"), {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}

%ul#toolbar
  %li.toolbar-group
    %ul.first-toolbar-group
      %li.scene.add-scene.disabled
        %a{:href => '#'} Scene
      %li.keyframe.disabled
        %a.add-keyframe{:href => '#'} Keyframe

  %li.toolbar-group
    %ul
      %li.edit-text.disabled
        %a.add-text{:href => '#'} Add Text
      %li.touch-zones.disabled
        %a.add-touch{:href => '#'} Add Touch
      %li.add-image.disabled
        = link_to "Add Image", "#", {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}

  %li.toolbar-group
    %ul
      %li.actions
        = link_to "Actions", '#'
      %li.videos
        = link_to "Videos", "#", {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}
      %li.images
        = link_to "Images", "#", {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}
      %li.sounds
        = link_to "Sounds", "#", {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}
      %li.fonts
        = link_to "Fonts", "#", {:remote => true, 'data-controls-modal' =>  "modal-window", 'data-backdrop' => true, 'data-keyboard' => true}

  %li.toolbar-group.last
    %ul
      %li.options.disabled
        = link_to "Options", "#"
      %li.preview.disabled
        %a.show-preview{:href => '#'} Preview

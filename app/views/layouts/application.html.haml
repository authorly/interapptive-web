!!!

%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Interapptive"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    :javascript
      App.currentUser(#{current_user.to_json(:only => :id)});
    = csrf_meta_tags
    = yield(:head)
  %body
    = render 'media/upload_modal'
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner.file-menu
        #file-menu.container
          = render 'layouts/file_menu'
      %nav.navbar-inner.toolbar
        .container
          = render 'layouts/toolbar'
      %nav.navbar-inner.font-menu
        %div#font-menu-buttons.container
          = render 'layouts/font_menu'
    #main{:role => "main"}
      .container
        .content
          .row
            .span2
              = render 'layouts/sidebar'
            .span10
              - flash.each do |name, msg|
                %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
                  %a.close{"data-dismiss" => "alert"}
                  = msg
              %div#text
              = yield
          %footer
    = render 'media/gallery_modal'
    = render 'media/upload_download_template'

!!!

%html
  %head
    %meta{:charset => 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', :content => 'IE=edge,chrome=1'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1, maximum-scale=1'}
    %title= content_for?(:title) ? yield(:title) : 'App Builder - Authorly'
    %meta{:content => '', :name => 'description'}
    %meta{:content => '', :name => 'author'}
    %link{:href => "/favicon.ico", :rel => "icon", :type => "image/x-icon"}

    = stylesheet_link_tag 'application', :media => 'all'
    %style#storybook-font-cache
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = yield(:head)

  %body
    %span#rails-environment{'data-rails-environment' => Rails.env, 'data-git-head' => Rails.application.config.git_head}

    %header.navbar.navbar-fixed-top
      #global-sync-indicator= image_tag 'loading.gif'
      = yield :header

    #main= yield

    :javascript
      $(document).ready(function() {
        App.init()
        #{ yield :initialization_javascript }
      })
